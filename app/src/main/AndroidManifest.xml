<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlogApp"
        tools:targetApi="31"
        tools:replace="android:fullBackupContent">
        <activity
            android:name=".view.UpdateProductActivity"
            android:exported="true"
            android:label="@string/title_activity_update_product"
            android:theme="@style/Theme.BlogApp">
        </activity>
        <activity
            android:name=".view.AddProductActivity"
            android:exported="true"
            android:label="@string/title_activity_add_product"
            android:theme="@style/Theme.BlogApp"/>
        <activity
            android:name=".ForgetPassword"
            android:exported="false"
            android:label="@string/title_activity_forget_password"
            android:theme="@style/Theme.BlogApp" />
        <activity
            android:name=".view.NavigationActivity"
            android:exported="false"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.BlogApp" />
        <activity
            android:name=".view.ListviewActivity"
            android:exported="true"
            android:label="@string/title_activity_listview"
            android:theme="@style/Theme.BlogApp" />
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.BlogApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.DashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.BlogApp" />
        <activity
            android:name=".view.RegisterActivity"
            android:exported="true"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.BlogApp"/>
        <activity
            android:name=".view.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.BlogApp" />
        <activity
            android:name=".view.AdminNavigationActivity"
            android:exported="false"
            android:label="Admin Navigation"
            android:theme="@style/Theme.BlogApp" />
        <activity
            android:name=".view.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.BlogApp" />
    </application>

</manifest>